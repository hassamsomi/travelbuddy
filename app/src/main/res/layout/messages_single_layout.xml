<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/message_single_layout"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="56sp"
        android:layout_height="56sp"
        android:src="@drawable/profile_image"
        android:id="@+id/message_profile_layout"
        />

    <TextView
        android:id="@+id/user_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_alignTop="@id/message_profile_layout"
        android:layout_toEndOf="@id/message_profile_layout"
        android:padding="2dp"
        android:text="@string/dispay_user_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_text_layout"
        android:id="@+id/message_text_layout"
        android:padding="2dp"
        android:layout_marginStart="13sp"
        android:textSize="12sp"
        android:text="@string/display_text"
        android:textColor="@color/chat_bar_color"
        android:background="@drawable/message_text_background"
        android:layout_toEndOf="@id/message_profile_layout"
        />
